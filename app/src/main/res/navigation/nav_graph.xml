<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/upcomingFragment">

    <fragment
        android:id="@+id/upcomingFragment"
        android:name="com.example.easytripplanner.Fragments.UpcomingFragment"
        android:label="Upcoming Trips"
        tools:layout="@layout/fragment_upcoming" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.easytripplanner.Fragments.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_upcomingFragment"
            app:destination="@id/upcomingFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.easytripplanner.Fragments.RegisterFragment"
        android:label="@string/sign_up"
        tools:layout="@layout/fragment_register" />
    <fragment
        android:id="@+id/mappedFragment"
        android:name="com.example.easytripplanner.Fragments.MappedFragment"
        android:label="@string/mapped_trips"
        tools:layout="@layout/fragment_mapped" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.easytripplanner.Fragments.HistoryFragment"
        android:label="@string/history"
        tools:layout="@layout/fragment_history" />
</navigation>