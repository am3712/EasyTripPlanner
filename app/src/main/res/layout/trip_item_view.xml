<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="10dp"
    android:background="@color/gray_orange"
    card_view:cardCornerRadius="@dimen/_8sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:background="@color/gray_orange"
        android:padding="@dimen/_4sdp"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tripName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#0C0C0C"
                    android:textSize="@dimen/_20sdp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="300dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_baseline_post_add_24"
                    android:backgroundTint="@color/gray_orange" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"

                    card_view:srcCompat="@drawable/ic_baseline_location_on_24" />

                <TextView
                    android:id="@+id/startPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#090909"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/endPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="#0E0E0E"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    card_view:srcCompat="@drawable/ic_baseline_alarm_24" />

                <TextView
                    android:id="@+id/textViewtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    card_view:srcCompat="@drawable/ic_baseline_date_range_24" />

                <TextView
                    android:id="@+id/textViewdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_Note"
                    android:layout_width="46dp"
                    android:layout_height="37dp"

                    android:layout_marginLeft="200dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_baseline_note_24"
                    android:backgroundTint="@color/gray_orange" />
            </LinearLayout>

            <Button
                android:id="@+id/btnStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F9690E"
                android:text="@string/btn_Start"
                android:textColor="#F6F4FA" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
