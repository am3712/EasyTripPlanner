<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFAFB"
    tools:context=".Fragments.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBFAFB"
        android:gravity="center_horizontal"
        android:paddingHorizontal="@dimen/_8sdp">

        <EditText
            android:id="@+id/usrPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/edit_text_frame"
            android:hint="@string/password"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColor="#0B0B0B"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/tvForgetPassword"
            app:layout_constraintEnd_toEndOf="@+id/usrEmail"
            app:layout_constraintStart_toStartOf="@+id/usrEmail"
            app:layout_constraintTop_toBottomOf="@+id/usrEmail"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/tvForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="@string/forgot_password"
            android:textColor="#3B5998"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/logLoginBtn"
            app:layout_constraintEnd_toEndOf="@+id/usrPassword"
            app:layout_constraintTop_toBottomOf="@+id/usrPassword"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/logSignUpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16sdp"
            android:padding="@dimen/_8sdp"
            android:text="@string/sign_up"
            android:textColor="#455A64"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/logLoginBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/logLoginBtn"
            tools:ignore="MissingPrefix" />

        <EditText
            android:id="@+id/usrEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:background="@drawable/edit_text_frame"
            android:hint="@string/email"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="#0C0C0C"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/usrPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/don_t_have_an_account"
            android:textColor="#3B5998"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/logSignUpBtn"
            app:layout_constraintEnd_toStartOf="@+id/logSignUpBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/logLoginBtn"
            app:layout_constraintTop_toTopOf="@+id/logSignUpBtn"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/candal"
            android:paddingVertical="@dimen/_32sdp"
            android:text="@string/login_form"
            android:textColor="#455A64"
            android:textSize="@dimen/_32ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/usrEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingPrefix" />

        <Button
            android:id="@+id/logLoginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:background="@drawable/btnsignin"
            android:text="@string/login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvForgetPassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

